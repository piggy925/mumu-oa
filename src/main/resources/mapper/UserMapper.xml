<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mumuoa.db.dao.UserMapper">
    <select id="haveRootUser" resultType="boolean">
        select if(count(*), true, false)
        from tb_user
        where root = 1;
    </select>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="hashmap" useGeneratedKeys="true">
        insert into tb_user
        set
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="openId != null">
                open_id = #{openId},
            </if>
            <if test="nickname != null">
                nickname = #{nickName},
            </if>
            <if test="photo != null">
                photo = #{photo},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="hiredate != null">
                hiredate = #{hiredate},
            </if>
            `role` = #{role},
            root = #{root},
            <if test="deptName != null">
                dept_id = (select tb_dept.id from tb_dept where dept_name = #{deptName}),
            </if>
            `status` = #{status},
            create_time = #{createTime}
        </trim>
    </insert>

    <select id="searchIdByOpenId" parameterType="string" resultType="integer">
        select id
        from tb_user
        where open_id = #{openId}
          and status = 1;
    </select>
</mapper>